<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddNewIncomeActivity">

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add New Income"
        android:textSize="34sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.134" />


    <Spinner
        android:id="@+id/catSpinAddInc"
        android:layout_width="266dp"
        android:layout_height="59dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="52dp"
        android:layout_marginRight="50dp"
        android:autofillHints="Category"
        app:layout_constraintEnd_toEndOf="@+id/textView8"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="@+id/textView8"
        app:layout_constraintTop_toBottomOf="@+id/textView8" />


        <EditText
            android:id="@+id/incDesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="44dp"
            android:ems="10"
            android:inputType="text"
            android:hint="Description"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="@+id/catSpinAddInc"
            app:layout_constraintHorizontal_bias="0.513"
            app:layout_constraintStart_toStartOf="@+id/catSpinAddInc"
            app:layout_constraintTop_toBottomOf="@+id/catSpinAddInc" />

        <EditText
            android:id="@+id/incAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="44dp"
            android:ems="10"
            android:inputType="numberDecimal"
            android:hint="Amount"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="@+id/incDesc"
            app:layout_constraintStart_toStartOf="@+id/incDesc"
            app:layout_constraintTop_toBottomOf="@+id/incDesc" />

        <Button
            android:id="@+id/addIncBtn"
            android:layout_width="170dp"
            android:layout_height="78dp"
            android:layout_marginTop="76dp"
            android:text="ADD"
            android:background="@drawable/btn"
            android:backgroundTint="@color/lightGreen"
            android:textSize="34sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/incAmount"
            app:layout_constraintStart_toStartOf="@+id/incAmount"
            app:layout_constraintTop_toBottomOf="@+id/incAmount"
            app:layout_constraintVertical_bias="0.069" />



</androidx.constraintlayout.widget.ConstraintLayout>